<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <ImageView android:id="@+id/image_large"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/large_image_height"
        android:layout_margin="@dimen/margin">
    </ImageView>
    <EditText android:id="@+id/edit_text_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/description_hint_text">
    </EditText>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
            android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button android:id="@+id/audio_record"
            android:layout_width="@dimen/small_button_width"
            android:layout_height="@dimen/button_height"
            android:text="Record"
            android:onClick="myClickHandler">
        </Button>
        <Button android:id="@+id/audio_stop"
            android:layout_width="@dimen/small_button_width"
            android:layout_height="@dimen/button_height"
            android:text="Stop"
            android:onClick="myClickHandler">
        </Button>
        <Button android:id="@+id/audio_clear"
            android:layout_width="@dimen/small_button_width"
            android:layout_height="@dimen/button_height"
            android:text="Clear"
            android:onClick="myClickHandler">
        </Button>
        <Button android:id="@+id/save_button"
            android:layout_width="@dimen/small_button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/save_button_text"
            android:onClick="myClickHandler">
        </Button>
    </LinearLayout>
</LinearLayout>