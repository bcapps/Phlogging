<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/unspecified"
        android:layout_weight="10"
        android:background="@drawable/toolbar">
        <ImageButton android:id="@+id/settings_button"
			style="@style/LittleButton"
			android:src="@drawable/gear2x"
			android:onClick="myClickHandler">
		</ImageButton>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="fill_parent"
            android:layout_width="@dimen/unspecified"
			android:layout_weight="50"
			android:gravity="center">
			<TextView android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="@string/toolbar_text"
				android:textSize="@dimen/big_text_size">
  			</TextView>
        </LinearLayout>
        <Button android:id="@+id/create_button"
            style="@style/LittleButton"
            android:text="Create">
        </Button>
        </LinearLayout>
        <ListView android:id="@+id/the_list"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/unspecified"
        android:layout_weight="90">
        </ListView>
</LinearLayout>
